  <%- include("../partials/header") %> 
  <%- include("../partials/navbar") %> 

  <div class="orderDiv">
  <div class="O-header">
    <h3 class="m-2 ms-5">My Orders</h3>
    <hr >
  </div>
    <% if(user.orders.length === 0){ %>
      <div class="empty">
        <h4 > No Orders yet! </h4>
        <div>
          <button class="btn btn-success btn-small"> <a class="nav-link" href="/products">Shop now</a></button>
   
        </div>
      </div>

      <% } %> 
          <% for(let item of user.orders){ %> 
          <div class="order-card m-1 mb-2 p-2 pe-3">
                <div class=" p-2 d-flex justify-content-between align-items-center flex-wrap">  

                  <div class="order middle ms-3 d-flex  align-items-center ">    
                    <img  src="<%= item.product.image %>" class="order-img" alt="product">   
                    <div class="o-details ms-3">
                      <h4><%= item.product.name %> </h4>
                      <p class="text-muted">Seller: <%= item.product.seller.toUpperCase() %> </p>
                      <p class="text-muted">Quantity: <%= item.qty %> </p>
                    </div>
                  </div>

                      <div>
                          <h4 class="Oprice me-2 d-inline-block">&#x20B9 <%= item.product.Nprice.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ","); %></h4>
                    </div>
                    <div>
                      <span>Ordered Confirmed</span>
                    </div>
                      
              </div>
            
                </div>
              
                <% } %>  
              
  </div>
  <%- include("../partials/footer") %> 