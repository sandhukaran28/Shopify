<%- include("../partials/header") %> 
<%- include("../partials/navbar") %> 

<div class="orderDiv">

        <% for(let item of user.orders){ %> 
        <div class="order-card m-1 mb-2 d-flex justify-content-between align-items-center">
              <div class=" p-2 d-flex">
                <img  src="<%= item.product.image %>" class="order-img" alt="prodcut">   

                <div class="order middle ms-3 d-flex justify-content-between align-items-center ">      
                  <div>
                    <h4><%= item.product.name %> </h4>
                    <p class="text-muted">Seller: <%= item.product.seller.toUpperCase() %> </p>
                    <p class="text-muted">Quantity: <%= item.qty %> </p>
                  </div>
                    <div class="me-3">
                        <h4 class=" card-text me-2 d-inline-block">&#x20B9 <%= item.product.Nprice.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ","); %></h4>
                  </div>
                    </div>
            </div>
            
              </div>
            </div>
        </div>
            

            <% } %> 
            

</div>
<%- include("../partials/footer") %> 